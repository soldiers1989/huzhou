<resources>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/dialog_load_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="my_style">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textSize">@dimen/fourteen</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">@dimen/five</item>
    </style>

    <style name="my_style2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/fifteen</item>
    </style>

    <style name="new_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fourteen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
