<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_bg"
    android:fadingEdge="none"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:scaleType="centerCrop"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                style="@style/my_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/grxm" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                style="@style/my_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zjlx" />

            <TextView
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                style="@style/my_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zjhm" />

            <TextView
                android:id="@+id/num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                style="@style/my_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/zhiye" />

            <TextView
                android:id="@+id/zy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="其他"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                style="@style/my_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/ysjh" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:textColor="@android:color/black">

                <TextView
                    android:id="@+id/old_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_weight="1"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/code_get"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="@drawable/button2"
                    android:padding="@dimen/one"
                    android:text="@string/hqyzm"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fifteen_sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                style="@style/my_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yzm" />

            <com.huzhou.gjj.viewUtils.ClearWriteEditText
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:inputType="number"
                android:maxLength="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/ten">

            <TextView
                style="@style/my_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/xsjh" />

            <com.huzhou.gjj.viewUtils.ClearWriteEditText
                android:id="@+id/new_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="2"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <Button
            android:id="@+id/detail_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fifty"
            android:layout_marginRight="@dimen/fifty"
            android:layout_marginTop="@dimen/thirty"
            android:background="@drawable/button"
            android:text="@string/submit"
            android:textColor="@android:color/white"
            android:textSize="@dimen/twenty_sp" />

    </LinearLayout>
</ScrollView>