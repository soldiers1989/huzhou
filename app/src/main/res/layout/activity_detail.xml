<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:scaleType="centerCrop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty"
        android:background="@color/color_tv_tittle_white"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/grxm"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one"
        android:background="@color/color_tv_tittle_white"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/grzh"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one"
        android:background="@color/color_tv_tittle_white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/fifteen"
        android:paddingLeft="@dimen/fifteen">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sjkd"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen_sp"
            android:textStyle="bold" />

        <Spinner
            android:entries="@array/sjkd"
            android:id="@+id/sjkd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one"
        android:background="@color/color_tv_tittle_white"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ksrq"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/start_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/header_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one"
        android:background="@color/color_tv_tittle_white"
        android:orientation="horizontal"
        android:padding="@dimen/fifteen">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/jsrq"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fourteen_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/end_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textColor="@color/header_bg" />
    </LinearLayout>

    <Button
        android:id="@+id/detail_find_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifty"
        android:layout_marginRight="@dimen/fifty"
        android:layout_marginTop="@dimen/thirty"
        android:background="@drawable/button"
        android:text="@string/chaxun"
        android:textColor="@android:color/white"
        android:textSize="@dimen/twenty_sp" />

</LinearLayout>