<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/detail_bg"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              android:scaleType="centerCrop">


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/thirty"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/five"
            android:paddingLeft="@dimen/fifteen"
            android:paddingRight="@dimen/fifteen"
            android:paddingTop="@dimen/five">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/yyyyt"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/yy_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/five"
            android:paddingLeft="@dimen/fifteen"
            android:paddingRight="@dimen/fifteen"
            android:paddingTop="@dimen/five">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/ywlx"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/yw_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/detail_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fifty"
        android:layout_marginRight="@dimen/fifty"
        android:layout_marginTop="@dimen/thirty"
        android:background="@drawable/button"
        android:text="@string/chaxun"
        android:textColor="@android:color/white"
        android:textSize="@dimen/twenty_sp"/>

    <LinearLayout
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/forty"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/fifteen">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/mc"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@android:color/black"
                android:textColor="@android:color/black"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/fifteen">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/address"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/fifteen">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/yybh"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/yy_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/fifteen">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/ddrs"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/people_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one"
            android:background="@color/color_tv_tittle_white"
            android:orientation="horizontal"
            android:padding="@dimen/fifteen">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="@string/pjddsj"
                android:textColor="@android:color/black"
                android:textSize="@dimen/fourteen_sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/pj_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>